  <div id="codeSection">
    <p class="subtitle">Enter the secret code to open your birthday surprise:</p>
    <input type="password" id="codeInput" placeholder="Enter code here" />
    <button id="submitCodeBtn">Submit</button>
    <div id="errorMsg" class="error"></div>
  </div>

  <button id="revealBtn">Reveal Message</button>
  <div id="message"></div>

  <footer>
    Made with ‚ù§Ô∏è just for you
  </footer>

<script>
  const SECRET_CODE = "MY WIFI"; // The correct passcode
  const codeInput = document.getElementById("codeInput");
  const submitCodeBtn = document.getElementById("submitCodeBtn");
  const errorMsg = document.getElementById("errorMsg");
  const codeSection = document.getElementById("codeSection");
  const revealBtn = document.getElementById("revealBtn");
  const messageDiv = document.getElementById("message");

  const errorMessages = [
    "Passcode is your Name in My Mobile",
    "ALL CAPITAL",
    "WITH SPACE"
  ];
  let errorIndex = 0;

  const messages = [
    "Wishing you a day full of love and laughter! üéÇ",
    "May all your dreams come true this year! üåü",
    "You‚Äôre the brightest star in my sky! ‚ú®",
    "Thanks for being my sunshine every day! ‚òÄÔ∏è",
    "Let‚Äôs make this birthday unforgettable! üéà",
    "You deserve all the happiness today and always! üíñ",
    "Another year more amazing ‚Äî just like you! ü•≥",
    "Here‚Äôs to more adventures and memories together! üë´",
    "You‚Äôre my favorite reason to smile every day! üòä",
    "Happy Birthday, my love! Forever and always ‚ù§Ô∏è"
  ];

  // Track which message to show next
  let currentIndex = 0;

  submitCodeBtn.addEventListener("click", () => {
    const enteredCode = codeInput.value.trim().toUpperCase(); // Force uppercase
    if (enteredCode === SECRET_CODE) {
      errorMsg.textContent = "";
      errorMsg.style.display = "none";
      codeSection.style.display = "none";
      revealBtn.style.display = "inline-block";
    } else {
      errorMsg.textContent = errorMessages[errorIndex];
      errorMsg.style.display = "block";
      errorIndex = (errorIndex + 1) % errorMessages.length;
    }
  });

  revealBtn.addEventListener("click", () => {
    if (currentIndex < messages.length) {
      messageDiv.classList.remove("show");
      setTimeout(() => {
        messageDiv.textContent = messages[currentIndex];
        messageDiv.classList.add("show");
        currentIndex++; // Move to next message next time
      }, 150);
    } else {
      messageDiv.textContent = "üéâ You‚Äôve seen all the birthday messages! üéâ";
      revealBtn.disabled = true; // Disable button when done
    }
  });
</script>


